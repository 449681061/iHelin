<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>

    <!-- load driver jar, must config local maven repo dir -->
    <!--<classPathEntry location="/Users/iHelin/Public/tools/mysql-connector-java-5.1.19.jar"/>-->
    <classPathEntry
            location="/Users/iHelin/.m2/repository/mysql/mysql-connector-java/5.1.19/mysql-connector-java-5.1.19.jar"/>

    <context id="Tuna" targetRuntime="MyBatis3">
        <!--设置编码格式-->
        <property name="javaFileEncoding" value="UTF-8"/>

        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <!-- remove comments -->
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://120.27.100.98:3306/iHelin?useUnicode=true&amp;characterEncoding=UTF-8&amp;allowMultiQueries=true"
                        userId="root" password="246260"/>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- gem entity -->
        <javaModelGenerator targetPackage="me.ianhe.db.entity"
                            targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="false"/>
        </javaModelGenerator>

        <!-- gem xml -->
        <sqlMapGenerator targetPackage="mapper"
                         targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!-- gem mapper -->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="me.ianhe.db.mapper" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table schema="iHelin" tableName="Activity" domainObjectName="Activity"
               enableCountByExample="fasle" enableSelectByExample="false"
               enableUpdateByExample="false" enableDeleteByExample="false">
            <generatedKey column="id" sqlStatement="JDBC"/>
        </table>

    </context>
</generatorConfiguration>